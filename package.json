{
  "name": "falixnodes",
  "version": "4.70.0",
  "description": "Accessing Falix, all from one place",
  "main": "src/assets/scripts/electronjs/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build",
    "scss": "sass --watch src/assets/stylesheets/master.scss src/assets/stylesheets/master.css"
  },
  "author": "KorbsStudio",
  "license": "MIT",
  "dependencies": {
    "command-exists": "^1.2.9",
    "electron-context-menu": "^3.1.2",
    "electron-log": "^4.4.6",
    "electron-updater": "^4.6.5",
    "glasstron": "^0.1.1",
    "powershell": "^2.3.2",
    "pushy-electron": "^1.0.9",
    "x11": "github:KorbsStudio/node-x11"
  },
  "devDependencies": {
    "electron-builder": "^22.14.13",
    "electron": "^18.0.0"
  },
  "build": {
    "appId": "com.korbsstudio.falixnodes-desktop",
    "productName": "FalixNodes Desktop",
    "publish": {
      "provider": "generic",
      "url": "https://falixnodes.net/releases/updates/falixnodes-desktop/live/"
    },
    "win": {
      "target": [
        "nsis",
        "appx"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "snap",
        "AppImage"
      ],
      "maintainer": "package.korbsstudio.falixnodes",
      "category": "Network",
      "vendor": "Korbs Studio",
      "description": "Accessing Falix, all from one place"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "shortcutName": "FalixNodes Desktop",
      "displayLanguageSelector": true,
      "oneClick": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false
    }
  }
}
